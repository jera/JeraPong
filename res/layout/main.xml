<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
    <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tableRow1" android:gravity="center_horizontal">
        <TextView android:textSize="26px" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView1" android:text="Score Player"></TextView>
    </TableRow>
	<EditText
		android:text=""
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/editText1"></EditText>
	<Button
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/button1"
		android:text="Submit Score"></Button>
</LinearLayout>
